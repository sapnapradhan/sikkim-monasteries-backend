# .env file - Environment variables for Sacred Sikkim Backend

# Server Configuration
NODE_ENV=development
PORT=3001

# Security
JWT_SECRET=sacred-sikkim-super-secret-jwt-key-2025-hackathon
BCRYPT_ROUNDS=10

# Database (for future MongoDB connection)
MONGODB_URI=mongodb://localhost:27017/sikkim-monasteries

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Admin Configuration
ADMIN_EMAILS=admin@sacredsikkim.com,demo@admin.com

# API Configuration
API_VERSION=3.0
API_NAME=Sacred Sikkim Backend